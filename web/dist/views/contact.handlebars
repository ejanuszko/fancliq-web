<div class="fancliq__contact">
    <div class="fancliq__contact__background"></div>
    <div class="fancliq__contact__hero">
        <div class="fancliq__contact__hero__items">
            <span class="fancliq__contact__hero__item">
                We'd like to hear from you.
            </span>
            <span class="fancliq__contact__hero__item">
                Shoot us your thoughts!
            </span>
        </div>
    </div>
    <div class="fancliq__contact__body">
        <div class="fancliq__contact__header">
            Message Us
        </div>
        <form class="fancliq__contact__form" id="fancliq__contact__form">
            <div class="fancliq__contact__form__content">
                <div class="fancliq__contact__input__container">
                    <input type="text" name="name" class="fancliq__contact__input" placeholder="Name" />
                </div>
                <div class="fancliq__contact__input__container">
                    <input type="email" name="email" class="fancliq__contact__input" placeholder="Email Address" />
                </div>
                <div class="fancliq__contact__textarea__container">
                    <textarea class="fancliq__contact__textarea" name="message" placeholder="What's on your mind?"></textarea>
                </div>
                <div class="fancliq__contact__error" id="fancliq__contact__error">
                    All fields are required
                </div>
                <div class="fancliq__contact__success" id="fancliq__contact__success">
                    Your message has been sent
                </div>
                <div class="fancliq__contact__submit__container">
                    <button type="submit" class="fancliq__primary-button fancliq__primary-button--small">
                        <span class="fancliq__primary-button__text">
                            Submit
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>